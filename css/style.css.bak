.classes-section.container-fluid {
    max-width: 1500px;
    margin: auto;
}

.classes-section-headings.row {
    margin: 50px 0px;
}

.classes-card-section.row {
    margin-bottom: 50px;
}

.classes-section-heading h2 {
    text-align: center;
    font: normal normal 45px/68px Teko;
    letter-spacing: 2.25px;
    color: #131313;
    text-transform: uppercase;
    opacity: 1;
    font-weight: 600;
	    margin-bottom: 0;
}

.classes-section-heading p {
    text-align: center;
    font: normal normal normal 18px/30px Ubuntu;
    letter-spacing: 0px;
    color: #808080;
    opacity: 1;
}

.classes-card-image-section {
    position: relative;
}

.classes-card-image-section img {
    width: 100%;
}

.card-image-text h2 {
    font: normal normal normal 16px/26px Ubuntu;
    letter-spacing: 0px;
    color: #FFFFFF;
    opacity: 1;
}

.card-image-text {
    position: absolute;
    top: 0;
    right: 0;
}

.cards-text-area-section {
    background: #F5F5F5;
    padding: 20px;
}


.classes-card-text-area-1 {
    padding-top: 10px;

}

.card-image-text h2 {
    font: normal normal normal 16px/26px Ubuntu;
    letter-spacing: 0px;
    color: #FFFFFF;
    background: #F59BB5 0% 0% no-repeat padding-box;
    opacity: 1;
    text-align: center;
    width: 78px;
    height: 43px;
    padding-top: 8px;
}

.classes-text-area-1-headings h2 {
    text-align: left;
    font: normal normal normal 18px/21px Ubuntu;
    letter-spacing: 0px;
    color: #131313;
    text-transform: uppercase;
    opacity: 1;
    font-weight: 600;
}

.classes-text-area-1-headings p {
    text-align: left;
    font: normal normal normal 16px/18px Ubuntu;
    letter-spacing: 0px;
    color: #F59BB5;
    opacity: 1;
}

.classes-text-area-2 {
    padding-top: 10px;
}


.classes-text-area-2-heading-1 h2 {
    text-align: left;
    font: normal normal normal 16px/18px Ubuntu;
    letter-spacing: 0px;
    color: #656565;
    opacity: 1;
}

.classes-text-area-2-heading-2 h2 {
    text-align: left;
    font: normal normal normal 16px/18px Ubuntu;
    letter-spacing: 0px;
    color: #656565;
    opacity: 1;
}

.classes-text-area-1-arrow {
    position: relative;
    top: 6px;

}

.classes_card {
    margin-bottom: 50px;
}

/*Responsive_design_starts_Here*/

@media only screen and (max-width: 1440px) {
	
	.classes_card {
    margin-bottom: 50px;
	}
	
	.classes-text-area-1-headings h2 {
    font: normal normal normal 15px/21px Ubuntu;
    font-weight: 600;
	}
	
	.classes-text-area-2-heading-1 h2 {
    font: normal normal normal 14px/18px Ubuntu;
}

.classes-text-area-2-heading-2 h2 {
    font: normal normal normal 14px/18px Ubuntu;
}
}

@media only screen and (max-width: 1200px){
	
	.classes_card {
    margin-bottom: 50px;
	}
	
	.cards-text-area-section {
    min-height: 155px;
	    padding: 12px;
	}
}
	


@media only screen and (max-width: 1023px) {
	
	.classes_card {
    margin-bottom: 40px;
	}
	
	.classes-section-headings.row {
    margin: 20px 0px;
	}

.classes-text-area-1-headings h2 {
    font: normal normal normal 14px/21px Ubuntu;
	font-weight:600;
}

	.cards-text-area-section {
    min-height: 155px;
	    padding: 12px;
	}
}

@media only screen and (max-width: 768px) {
	
	.classes-section-heading p {
    text-align: center;
    font: normal normal normal 14px/30px Ubuntu;
	}
